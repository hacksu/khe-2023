{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "dist/**", ".next-build/**", "dist-build/**"],
            "cache": true,
            "inputs": ["src/**/*.tsx", "src/**/*.ts", "next.config.mjs"]
        },
        "dev": {
            "cache": false,
            "outputMode": "none"
        },
        "lint": {
            "cache": true,
            "inputs": ["src/**/*.tsx", "src/**/*.ts", "next.config.mjs"]
        },
        "start": {
            "dependsOn": ["build"]
        }
    }   
}