{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["lint", "^build"],
            "outputs": [".next/**", "dist/**"]
        },
        "dev": {
            "cache": false,
            "outputMode": "none"
        },
        "lint": {
            "cache": true
        },
        "start": {
            "dependsOn": ["build"]
        }
    }   
}